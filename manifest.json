{
  "manifest_version": 3,
  "name": "SignSync",
  "version": "1.0",
  "description": "Exibe um popup customizado em qualquer lugar da tela",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Mostrar Popup",
    "default_icon": {
      "16": "icons/Hand_SignSync.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["icons/config_icon.png"],
    "matches": ["<all_urls>"]
  }
  ],
  "icons": {
    "16": "icons/Hand_SignSync.png"
  }
}

  