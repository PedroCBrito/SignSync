{
  "manifest_version": 3,
  "name": "SignSync",
  "version": "1.0",
  "description": "Exibe uma extensão para tradução de conteúdos para LIBRAS",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Mostrar Popup",
    "default_icon": {
      "16": "assets/icons/Hand_SignSync.png",
      "32": "assets/icons/Hand_SignSync.png",
      "48": "assets/icons/Icon_SignSync.png",
      "128": "assets/icons/Icon_SignSync.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/style.css", 
        "libraries/fontawesome-free-6.7.2-web/**",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/Hand_SignSync.png",
    "32": "assets/icons/Hand_SignSync.png",
    "48": "assets/icons/Icon_SignSync.png", 
    "128": "assets/icons/Icon_SignSync.png"
  }
}
